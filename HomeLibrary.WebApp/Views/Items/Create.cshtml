@model HomeLibrary.DatabaseModel.Item

@{
    ViewData["Title"] = "Create";
}

<h4>Dodaj nową pozycje do biblioteki</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Tytuł pozycji</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemTypeId" class="control-label">Rodzaj pozycji</label>


                <select asp-for="ItemTypeId" class="form-control" asp-items="ViewBag.ItemTypeId"></select>



            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label">Autor/Twórca</label>
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearPublishment" class="control-label">Rok wydania</label>
                <input asp-for="YearPublishment" class="form-control" />
                <span asp-validation-for="YearPublishment" class="text-danger"></span>
            </div>
            <!--    
     <div class="form-group">
         <div class="checkbox">
             <label>
                 <input asp-for="Borrowed" /> @Html.DisplayNameFor(model => model.Borrowed)
             </label>
         </div>
     </div>
    <div class="form-group">
         <label asp-for="CoverGuid" class="control-label"></label>
         <input asp-for="CoverGuid" class="form-control" />
         <span asp-validation-for="CoverGuid" class="text-danger"></span>
     </div>
        -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>




<div>
    <a asp-action="Index">Powrót do biblioteki</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
