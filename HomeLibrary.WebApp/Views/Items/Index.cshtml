@model IEnumerable<HomeLibrary.DatabaseModel.Item>

@{
    ViewData["Title"] = "Index";
}

<h2>Proszę wybrać pozycję do wypożyczenia</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="col-lg-12">
            <a class="btn btn-circle pull-right btn-success" asp-action="Create">
                <i class="glyphicon glyphicon-plus">

                </i>

            </a>
        </div>
    }
</p>

<p>

</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-md-offset-1 col-md-4 col-xs-12">
            <div class="card horizontal">
                <div class="card-image ">
                    <img src="@item.CoverGuid" class="zoom" >
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-circle-small  btn-success pull-right" asp-action="Edit" asp-route-id="@item.ItemId" data-toggle="tooltip" title="Edytuj">
                                <i class="glyphicon glyphicon-edit">
                                </i>
                            </a>
                            <a class="btn btn-circle-small  btn-warning pull-right" asp-action="Delete" asp-route-id="@item.ItemId" data-toggle="tooltip" title="Usuń">
                                <i class="glyphicon glyphicon-trash">
                                </i>
                            </a>
                        }
                        <h5>@item.Title</h5>
                        @item.Author.Name @item.Author.Surname

                        @if (item.Borrowed == false)
                        {
                            <p>
                                <a class="btn btn-info" asp-action="Borrow" asp-route-id="@item.ItemId">Wypożycz</a>
                            </p>
                        }
                        else
                        {
                            <p>
                                <a class="btn btn-info" asp-action="Return" asp-route-id="@item.ItemId">Zwróć</a>
                            </p>

                        }

                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>
