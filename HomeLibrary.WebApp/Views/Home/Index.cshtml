@{
    ViewData["Title"] = "Home Page";
}
<environment exclude="Authors">

    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</environment>
<div class="row">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/books.svg" alt="library" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Historical literature, horror, classic, poetry, biography and many more. You can find every kind of books.

                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/pexels-photo.svg" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        " All books can be divided into two groups: books
                        for a moment and for every moment " - John Ruskin
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/bookglasses.svg" alt="Microsoft Azure" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Need more books? Check us !
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="row">
    <table class="table" id="developers">
        <thead>
            <tr>

                <th>

                    <p id='devs'></p>

                </th>


            </tr>
        </thead>
    </table>
</div>

<!-- Footer -->
<footer id="footer">
    <div id="footerContainer">
        <ul class="list-unstyled list-inline text-center py-2">
            <li class="">
                <h5 class="">Register for free</h5>
            </li>
            <li id="btnFooter">
            <a href="#!">Sign up!</a>
        </li>
    </ul>
</div>

</footer>
