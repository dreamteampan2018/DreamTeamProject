@model IEnumerable<HomeLibrary.DatabaseModel.Author>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/Authors.css" />
<div class="panel panel-primary" id='headerAuthorTable'>
    <table>
        <tr class="panel-heading">
            <td ><h2>Authors</h2></td>
            <td>
                <p>
                    <a class="btn btn-sm btn-outline-primary btn-create" asp-action="Create">Create New</a>
                </p>
            </td>
        </tr>
    </table>
</div>


<div class="container" id="authorsTable">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary a-btn-slide-text">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            <span><strong>Edit</strong></span>
                        </a>|
                        <a class="btn btn-primary a-btn-slide-text" asp-action="Details" asp-route-id="@item.AuthorId"><strong>Details</strong></a> |
                        <a class="btn btn-primary a-btn-slide-text" asp-action="Delete" asp-route-id="@item.AuthorId"><strong>Delete</strong></a>
                        <a class="btn btn-primary a-btn-slide-text" onclick="getName('@item.Name','@item.Surname')" data-toggle="modal" data-target="#basicModal">
                            <strong class="glyphicon glyphicon-modal-window" ></strong>
                        </a>

                    </td>
                </tr>
            }

        </tbody>

    </table>
    <div id="x"></div>
        <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <p class="modal-title" id="myModalLabel"></p>
                    </div>
                    <div class="modal-body">
                        <h3>Tekst z Wikipedi</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>



