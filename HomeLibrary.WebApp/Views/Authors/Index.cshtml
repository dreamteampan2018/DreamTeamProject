@model IEnumerable<HomeLibrary.DatabaseModel.Author>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/Authors.css" />
<div class="panel panel-primary" id='headerAuthorTable'>
    <table>
        <tr class="panel-heading">
            <td><h2>W naszej bibliotece znajdą Państwo dzieła następujących autorów:</h2></td>
            <td>
                <p>
                </p>
            </td>
        </tr>
    </table>
</div>


<div class="container" id="authorsTable">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="col-lg-12">
            <a class="btn btn-circle pull-right btn-success" asp-action="Create">
                <i class="glyphicon glyphicon-plus">

                </i>

            </a>
        </div>
        }
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="pull-right">
                                    <a class="btn btn-circle  btn-success" asp-action="Edit" asp-route-id="@item.AuthorId">
                                        <i class="glyphicon glyphicon-edit">
                                        </i>
                                    </a>



                                    <a class="btn btn-circle btn-info" asp-action="Details" asp-route-id="@item.AuthorId">
                                        <i class="glyphicon glyphicon-comment">
                                        </i>
                                    </a>
                                    <a class="btn btn-circle btn-warning" asp-action="Delete" asp-route-id="@item.AuthorId">
                                        <i class="glyphicon glyphicon-trash">
                                        </i>
                                    </a>


                                </div>
                            }
                            <a class="btn btn-circle btn-success" onclick="getName('@item.Name','@item.Surname')" data-toggle="modal" data-target="#basicModal">
                                <i class="glyphicon glyphicon-education">
                                </i>

                            </a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
        <div id="x"></div>
        <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <p class="modal-title" id="myModalLabel"></p>
                    </div>
                    <div class="modal-body">
                        <h3>Tekst z Wikipedi</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>



